{
  "name": "@cosmicvelocity/commons-js",
  "version": "0.1.2",
  "description": "It provides reusable components with small granularity.",
  "keywords": [
    "es6",
    "modules",
    "util"
  ],
  "author": "Kouichi Machida <k-machida@aideo.co.jp>",
  "license": "Apache-2.0",
  "private": false,
  "homepage": "https://github.com/cosmicvelocity/commons-js#readme",
  "bugs": {
    "url": "https://github.com/cosmicvelocity/commons-js/issues"
  },
  "main": "build/src/index.js",
  "files": [
    "build"
  ],
  "directories": {
    "lib": "build"
  },
  "scripts": {
    "build": "node --max_old_space_size=8192 node_modules/typescript/bin/tsc",
    "lint": "node --max_old_space_size=8192 node_modules/tslint/bin/tslint src/**/*.ts test/**/*.ts",
    "lint-fix": "node --max_old_space_size=8192 node_modules/tslint/bin/tslint --fix src/**/*.ts test/**/*.ts",
    "test": "node --max_old_space_size=8192 node_modules/cross-env/dist/bin/cross-env.js NODE_ENV=test node_modules/jest/bin/jest.js",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cosmicvelocity/commons-js.git"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/moment": "^2.13.0",
    "cross-env": "^5.1.1",
    "jest": "^24.8.0",
    "jsdom": "^11.5.1",
    "moment": "^2.24.0",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "typescript": "^3.5.2"
  },
  "browserslist": [
    "> 1%",
    "last 3 versions",
    "ie >= 11",
    "Chrome >= 21",
    "Firefox >= 28",
    "Safari >= 6.1",
    "Opera >= 12.1",
    "iOS >= 7.1",
    "Android >= 4.4"
  ],
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "roots": [
      "<rootDir>/test"
    ],
    "testRegex": "/test/.*\\.ts$",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "verbose": true
  }
}
